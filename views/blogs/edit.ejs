<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div id="form-content">
            <h1 id="form-header">Edit <%=blog.title%></h1>
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" value="<%=blog.title%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[body]" value="<%=blog.body%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit the changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>