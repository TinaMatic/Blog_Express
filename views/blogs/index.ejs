<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-2"><i class="fas fa-heart"></i>Blog</h1>
        <p>
            <a class="btn btn-primary btn-lg" href="/blogs/new">Add New Blog</a>
        </p>
    </div>
    <div class="row">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-4 col-sm-6 d-flex">
                <div class="card" style="width: 18rem;">
                  <img src="<%=blog.image%>" class="card-img-top" alt="...">
                  <div class="card-body flex-fill">
                    <h5 class="card-title"><%=blog.title%></h5>
                    <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                    <a id="index-button" href="/blogs/<%=blog._id%>" class="btn btn-primary">See More</a>
                  </div>
                </div>
            </div>
        <% }); %>
        
    </div>
    
</div>

<% include ../partials/footer %>